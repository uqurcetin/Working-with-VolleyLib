<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp">

    <TextView
        android:text="txtid"
        android:id="@+id/txtid"
        android:layout_toLeftOf="@+id/thumbnail"
        android:layout_margin="2dp"
        android:layout_width="5dp"
        android:layout_height="wrap_content" />

    <com.android.volley.toolbox.NetworkImageView
        android:layout_margin="5dp"
        android:id="@+id/thumbnail"
        android:layout_toRightOf="@+id/txtid"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:text="txtfkaccountid"
        android:id="@+id/txtfkaccountid"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="txtcreatedat"
        android:id="@+id/txtcreatedat"
        android:layout_toRightOf="@+id/txtfkaccountid"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="txtupdatedat"
        android:id="@+id/txtupdatedat"
        android:layout_toRightOf="@+id/txtcreatedat"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="txtdeletedat"
        android:id="@+id/txtdeletedat"
        android:layout_toRightOf="@+id/txtupdatedat"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="txtname"
        android:id="@+id/txtname"
        android:layout_toRightOf="@+id/txtdeletedat"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />
    <TextView
        android:text="txtadres"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_below="@+id/txtfkaccountid"
        android:id="@+id/txtadres"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />
    <TextView
        android:text="txtcity"
        android:id="@+id/txtcity"
        android:layout_toRightOf="@+id/txtadres"
        android:layout_below="@+id/txtcreatedat"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />
    <TextView
        android:text="txtdistrict"
        android:id="@+id/txtdistrict"
        android:layout_toRightOf="@+id/txtcity"
        android:layout_below="@+id/txtupdatedat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="txtorder"
        android:id="@+id/txtorder"
        android:layout_toRightOf="@+id/txtdistrict"
        android:layout_below="@+id/txtdeletedat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="txtlatitude"
        android:id="@+id/txtlatitude"
        android:layout_toRightOf="@+id/txtorder"
        android:layout_below="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_toRightOf="@+id/txtname"
        android:layout_marginTop="15dp"
        android:src="@drawable/row_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>